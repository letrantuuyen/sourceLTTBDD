<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imAccountComment"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/loading"/>

            <TextView
                android:id="@+id/txtNameAcoountComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busin"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="110dp"/>

            <TextView
                android:id="@+id/txtDateComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/8/2018"
                android:textSize="15sp"
                android:layout_alignStart="@+id/txtNameAcoountComment"
                android:layout_below="@+id/txtNameAcoountComment"/>

            <TextView
                android:id="@+id/txtContentComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/txtNameAcoountComment"
                android:layout_below="@+id/txtDateComment"
                android:text="content"
                android:textColor="@color/colorBlack"/>

            <RatingBar
                android:id="@+id/rating"
                style= "?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rating="5"
                android:theme="@style/RatingBar"
                android:layout_marginTop="34dp"
                android:layout_alignStart="@+id/txtDateComment"
                android:layout_marginStart="85dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>