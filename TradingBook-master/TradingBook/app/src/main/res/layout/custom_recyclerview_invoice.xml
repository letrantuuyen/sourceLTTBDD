<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:id="@+id/lnitem_custominvoice">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imProduct"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/invoices"/>

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thien Thanh"
                android:textStyle="italic|bold"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="95dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/10/2018"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_below="@+id/tvUser"
                android:textStyle="italic|bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="95dp"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGG"
                android:text="30.000d"
                android:textSize="22dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvIdInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>